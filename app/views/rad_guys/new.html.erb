<div class="container text-center">
  <%= form_for(@rad_guy, html: {multipart: true}) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :image, "Upload image" %>
    <%= f.file_field :image %>

    <%= f.submit "Create Rad Guy", class: 'btn btn-success btn-lg' %>

  <% end %>
</div>